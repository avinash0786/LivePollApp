<script src="./scripts/generate.js"></script>

<div class="container shadow" style="background: rgba(233,230,230,0.5);width: 70%;padding-bottom: 18px;margin: auto;margin-top: 107px;">
    <h1>Topic: {{title}}</h1>
    <div style="height: fit-content;margin-top: 34px;">

        {{#each options }}
        <div style="height: 43px;background: rgba(158,205,141,0);width: 101%;padding: 0px;padding-bottom: 3px;padding-left: 2px;margin-top: 6px;border-radius: 2px;">
            <div style="height: 14px;width: 100%;background: rgba(196,158,158,0);">
                <div class="progress" style="height: 100%;width: 100%;">
                    <div class="progress-bar bg-success progress-bar-animated" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100" style="width: 50%;">50%</div>
                </div>
            </div>
            <div style="height: 21px;width: 100%;background: rgba(196,158,158,0);">
                <p class="d-inline" style="width: 80%;">{{this}}</p>
                <div class="float-right" style="height: 21px;width: 16%;background: rgba(158,196,194,0);">
                    <p class="d-inline" style="width: 80%;">Votes: 23</p>
                </div>
            </div>
        </div>
        {{/each}}
            <small class="form-text text-muted">Poll Generated by: {{creator}}<small class="form-text text-muted float-right">Poll Generated ON:
                {{date}}</small></small>
        </div>
    </div>
</div>