<script src="./scripts/dashboard.js"></script>

<div class="container">


    <h1 class=" py-2 px-2 title has-background-primary py-2 px-2">Welcome to Live Poll</h1>
    <br>
    <div class="field is-grouped">
        <p class="control is-expanded">
            <input class="input" id="searchBar" type="text" placeholder="Search the Poll">
        </p>
        <p class="control">
            <a class="button is-info is-hovered">
                Search
            </a>
        </p>
    </div>
</div>
<div class="alltabs p-3">
    <div class="tabs  has-background-primary-light p-5 ">
        <h1 class="is-size-2 p-4">Genrate Poll</h1>
        <div class="field p-3 m-3">


            <div class="buttons">

                <a style="text-decoration: none;" href="/genPoll" <button class="button is-link is-medium m-3">Create
                    Poll </button></a>
            </div>
        </div>

    </div>
    <div class="tabs has-background-primary-light p-3 ">
        <h1 class="is-size-2 p-4">Popular Polls </h1>
        <div class="content p-2">
            <ol type="1">

                <li>
                    <h2><a style="text-decoration: none;" href="/pollfor?name={{topic0}}" class="is-link">{{topic0}}</a>
                    </h2>
                </li>
                <li>
                    <h2><a style="text-decoration: none;" href="/pollfor?name={{topic1}}" class="is-link">{{topic1}}</a>
                    </h2>
                </li>
                <li>
                    <h2><a style="text-decoration: none;" href="/pollfor?name={{topic2}}" class="is-link">{{topic2}}</a>
                    </h2>
                </li>

            </ol>
        </div>
    </div>
    <div class="live_tabs has-background-primary-light p-5 ">

        <h5 class="title" id="pollNaam">Name: {{name}}</h5>
        <h1 class="is-size-3">Topic: {{title}}</h1>
        <div id="par" style="height: fit-content;margin-top: 34px;">

            {{#each options }}
            <div
                style="height: 43px;background: rgba(158,205,141,0);width: 101%;padding: 0px;padding-bottom: 3px;padding-left: 2px;margin-top: 6px;border-radius: 2px;">
                <div style="height: 14px;width: 100%;background: rgba(196,158,158,0);">
                    <div class="progress" style="height: 100%;width: 100%;">
                        <div class="progress-bar bg-success progress-bar-animated" aria-valuenow="50" aria-valuemin="0"
                            aria-valuemax="100" style="width: 0%;">0%</div>
                    </div>
                </div>
                <div style="height: 21px;width: 100%;background: rgba(196,158,158,0);">
                    <p class="d-inline" style="width: 80%;">{{this}}</p>
                    <div class="float-right" style="height: 21px;width: 16%;background: rgba(158,196,194,0);">
                        <p class="d-inline" style="width: 80%;">Votes: </p>
                    </div>
                </div>
            </div>
            {{/each}}
            <small class="form-text text-muted">Poll Generated by: {{creator}}<small
                    class="form-text text-muted float-right">Poll Generated ON:
                    {{date}}</small></small>
        </div>
        <br>
        <br>
        <div class="button is-primary ">Next</div>
        <div class="button is-link ">Prev</div>
    </div>
</div>
</div>
</div>